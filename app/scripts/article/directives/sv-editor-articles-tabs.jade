md-content
    button.btn.btn--xs.btn--black.bgc-red-300.btn--raised.mt(lx-ripple='' ng-click='saveArticlesRank()' ng-disabled='!isRankChanged') Save Ranking
    md-tabs(md-selected='selectedIndex', md-border-bottom='' md-dynamic-height="" md-stretch-tabs="never")
        md-tab.sv-tabs(md-stretch-tabs="never" ng-if='!user.isReader()')
            md-tab-label {{'news-articles'|translate}}
            md-tab-body
                div(ui-sortable='sortableOptions' ng-model='articles')
                    div(ng-repeat='article in articles' style='cursor:move')
                        sv-author-article-link(is-rank='true' article='article' index="$index+1")

md-dialog.sv-modal-sm(aria-label='Demographics Maps')
    div.bgc-grey-200(layout="row" layout-align='space-between center' class='pl+ pr+ pt+ pb')
        div(layout='row' layout-align='start')
            div.mr
                a(class="logo-link" ui-sref="app.home" ng-click='hide()')
                    img(ng-src="img/logo/logo.png" width="80px" height="auto" alt="Svet Russian Media Group")
            span.fs-headline.mt.mb.tc-grey-800(style='font-weight:500') Advertise with us!
        button.btn.btn--s.btn--icon.btn--grey(ng-click='hide()')
            i.mdi.mdi-close &nbsp
    md-dialog-content(style='margin:0px;padding:0px')
        div.p.sv-iframe-responsive-wrap.text-center
            iframe.sv-iframe-responsive(src="https://www.google.com/maps/d/embed?mid=zdTHzl0THQeM.k_tB4rfOIVEo" width="640" height="480"  scrolling="no" zooming="no")
        sv-contact-info(bgc="bgc-grey-200" hide-sm)
